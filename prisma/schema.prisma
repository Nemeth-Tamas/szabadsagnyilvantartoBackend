generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("felhasznalo")
  remainingDays Int @default(0)
  maxDays Int @default(0)
  sick    Boolean  @default(false)
  onLeave Boolean  @default(false)
  manager   User?    @relation("Manager", fields: [managerId], references: [id])
  managerId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User User[] @relation("Manager")
  Szabadsag Szabadsag[] @relation("UserRelation")
  Tappenz Tappenz[]
  Kerelem Kerelem[]
  Uzenetek Uzenetek[]
  Plan Plan?
}

model Szabadsag {
  id        String   @id @default(cuid())
  user      User     @relation("UserRelation", fields: [userId], references: [id])
  userId    String
  type      String
  dates     DateTime[]
  managerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Kerelem Kerelem[]
}

model Tappenz {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  startDate DateTime
  endDate   DateTime?
  managerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Kerelem {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String
  dates     DateTime[]
  managerId String
  managerName String
  approved  Boolean  @default(false)
  rejected  Boolean  @default(false)
  rejectedMessage String?
  szabadsagId String?
  szabadsag Szabadsag? @relation(fields: [szabadsagId], references: [id])
  submittingName String
  submittingEmailIdentifier String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Uzenetek {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  message   String
  date      DateTime
  sendingName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Plan {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  filledOut Boolean  @default(false)
  dates     DateTime[]
  managerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}